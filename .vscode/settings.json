{
	"editor.formatOnSave": true,
	"[javascript]": {
		"editor.formatOnSave": false
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false
	},
	"[typescript]": {
		"editor.formatOnSave": false
	},
	"[typescriptreact]": {
		"editor.formatOnSave": false
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"source.addMissingImports": false
	},
	"eslint.validate": [
		"typescript",
		"typescriptreact",
		"javascript",
		"javascriptreact"
	],
	"eslint.packageManager": "yarn",
	"typescript.referencesCodeLens.enabled": true
}
